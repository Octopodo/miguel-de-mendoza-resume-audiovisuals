---
import Layout from '../layouts/Layout.astro';
import CVContent from '../components/CVContent.astro';
import CVHeader from '../components/CVHeader.astro';
import CVSection from '../components/CVSection.astro';
import JobEntry from '../components/JobEntry.astro';
import SkillsList from '../components/SkillsList.astro';

// Datos del CV en español
const personalInfo = {
    name: 'Miguel de Mendoza',
    title: 'Operador de Cámara y Técnico Audiovisual',
    contact: 'm.legnacra@gmail.com | +34 XXX XXX XXX | LinkedIn | Madrid',
};

const technicalSkills = [
    'Manejo de cámaras réflex y de video 4K',
    'Configuración de planos y encuadres en estudio',
    'Iluminación profesional',
    'Chroma key',
    'Edición de video',
    'Adobe After Effects',
    'Adobe Photoshop',
    'Adobe Illustrator',
    'Adobe Premiere',
    'Cinema 4D',
    'Presonus Studio One 4',
    'Desarrollo con Extendscript y CEP',
    'Frontend: Vue, CSS/Sass, Node, Webpack',
    'Gestión de proyectos',
    'Automatización de procesos',
];

const personalSkills = [
    'Alta capacidad de aprendizaje y adaptación',
    'Organización y gestión eficiente del tiempo',
    'Trabajo en equipo y comunicación efectiva',
    'Creatividad e inquietud artística',
    'Inglés (B1, hablado y escrito)',
    'Catalán (nativo)',
    'Español (nativo)',
];
---

<Layout title="CV - Operador de Cámara y Técnico Audiovisual" lang="es">
    <CVContent>
        <CVHeader
            name={personalInfo.name}
            title={personalInfo.title}
            contact={personalInfo.contact}
        />

        <CVSection title="Perfil profesional">
            <p>
                Operador de cámara y técnico audiovisual con más de 15 años de
                experiencia en producción y grabación de video, tanto en estudio
                como en directo. Experto en el manejo de cámaras réflex y de
                video 4K, iluminación, chroma key y soporte técnico en rodajes.
                Combino habilidades técnicas y creativas para garantizar
                resultados de alta calidad en proyectos audiovisuales. Mi
                capacidad analítica, atención al detalle y enfoque colaborativo
                me convierten en un activo valioso para cualquier equipo de
                producción.
            </p>
        </CVSection>

        <CVSection title="Habilidades técnicas">
            <SkillsList items={technicalSkills} variant="tech" />
        </CVSection>

        <CVSection title="Habilidades personales">
            <SkillsList items={personalSkills} variant="languages" />
        </CVSection>

        <CVSection title="Experiencia profesional">
            <JobEntry
                position="Técnico de Estudio y Editor"
                company="ForproTV"
                period="Septiembre 2024 – Actualidad"
                type="job"
                location="Madrid, España"
            >
                <ul>
                    <li>
                        Operador de cámaras en estudio para videos formativos,
                        utilizando cámaras réflex y de video 4K.
                    </li>
                    <li>
                        Configuración de iluminación, chroma key y sonido para
                        grabaciones en vivo y pregrabadas.
                    </li>
                    <li>
                        Edición de video y efectos, optimizando flujos de
                        trabajo y reduciendo tiempos de edición en un <strong
                            >80%</strong
                        >.
                    </li>
                </ul>
            </JobEntry>

            <JobEntry
                position="Freelance – Operador de Cámara y Postproductor"
                company="Señor Balboa, Forpro.tv, Ejecon"
                period="Octubre 2016 – Abril 2019"
                type="job"
            >
                <ul>
                    <li>
                        Operador de cámara en rodajes para eventos en directo y
                        producciones en estudio.
                    </li>
                    <li>
                        Soporte técnico en chroma key, corrección de color y
                        postproducción con <span class="tech"
                            >After Effects</span
                        >.
                    </li>
                    <li>
                        Fotografía y grabación de video para proyectos
                        corporativos y formativos.
                    </li>
                </ul>
            </JobEntry>

            <JobEntry
                position="Grafista"
                company="Lucky Road"
                period="Septiembre – Octubre 2016"
                type="job"
            >
                <ul>
                    <li>
                        Creación de grafismos para el programa de Disney Channel <strong
                            >"Boca-zas"</strong
                        >.
                    </li>
                    <li>
                        Operación de cámara y soporte técnico en producción
                        audiovisual, cumpliendo plazos ajustados.
                    </li>
                </ul>
            </JobEntry>

            <JobEntry
                position="Director Creativo"
                company="TVA / I+D"
                period="2014 – 2015"
                type="job"
            >
                <ul>
                    <li>
                        Producción de videos corporativos, incluyendo operación
                        de cámara y diseño multimedia.
                    </li>
                    <li>
                        Soporte técnico en proyectos audiovisuales y desarrollo
                        de herramientas para optimizar procesos.
                    </li>
                </ul>
            </JobEntry>

            <JobEntry
                position="Freelance – Motion Graphics y Operador de Cámara"
                company="Clientes: Cáritas, Renta 4, Cintra"
                period="2011 – 2014"
                type="job"
            >
                <ul>
                    <li>
                        Operador de cámara en proyectos corporativos, spots y
                        videoclips, asegurando calidad técnica.
                    </li>
                    <li>
                        Diseño y producción de motion graphics con <span
                            class="tech">After Effects</span
                        > para diversos entregables audiovisuales.
                    </li>
                </ul>
            </JobEntry>

            <JobEntry
                position="Productor Musical"
                company="Kalamar Tinta Negra, King Joker, El Mito de la Taberna"
                period="Abril 2019 – Mayo 2022"
                type="job"
            >
                <ul>
                    <li>
                        Grabación y edición de audio, aplicando habilidades
                        técnicas en producción sonora.
                    </li>
                </ul>
            </JobEntry>
        </CVSection>

        <CVSection title="Formación">
            <JobEntry
                position="Licenciado en Bellas Artes"
                company="Universidad Francisco de Vitoria (UFV)"
                period="2011"
                type="education"
            />

            <JobEntry
                position="Diplomado en Mezcla"
                company="Instituto de Mezcla"
                period="2019"
                type="education"
            />
        </CVSection>

        <CVSection title="Proyectos adicionales">
            <JobEntry
                position="KT Smart Sequencer"
                company="Proyecto Personal"
                period="2023"
                type="project"
            >
                <p>
                    Herramienta de automatización para montaje de videos en <span
                        class="tech">After Effects</span
                    >, optimizando flujos de trabajo audiovisuales.
                </p>
            </JobEntry>

            <JobEntry
                position="KT Framework"
                company="Proyecto Personal"
                period="2022"
                type="project"
            >
                <p>
                    Framework para APIs de Adobe, facilitando el desarrollo de
                    herramientas sin afectar tiempos de producción.
                </p>
            </JobEntry>
        </CVSection>

        <CVSection title="Información adicional">
            <ul>
                <li><strong>Carné de conducir:</strong> B</li>
                <li>
                    <strong>Especialidades adicionales:</strong> Técnico de sonido
                    y músico, con experiencia en desmontaje y ensamblaje de hardware
                </li>
                <li>
                    <strong>Disponibilidad:</strong> Inmediata para proyectos freelance
                    y colaboraciones
                </li>
            </ul>
        </CVSection>
    </CVContent>
</Layout>
