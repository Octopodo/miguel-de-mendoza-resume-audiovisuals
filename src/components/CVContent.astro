---
export interface Props {
    class?: string;
}

const { class: className } = Astro.props;
---

<div class={`cv-content ${className || ''}`}>
    <slot />
</div>

<style>
    .cv-content {
        max-width: 800px;
        margin: 0 auto;
        line-height: 1.6;
        color: var(--text-color);
    }

    .cv-content :global(h1) {
        font-size: 2.5rem;
        color: var(--primary-color);
        text-align: center;
        margin-bottom: 0.5rem;
        font-weight: 700;
    }

    .cv-content :global(h2) {
        font-size: 1.1rem;
        color: var(--secondary-color);
        text-align: center;
        margin-bottom: 2rem;
        font-weight: 400;
    }

    .cv-content :global(h3) {
        font-size: 1.5rem;
        color: var(--primary-color);
        margin-top: 2.5rem;
        margin-bottom: 1rem;
        font-weight: 600;
        border-bottom: 2px solid var(--accent-color);
        padding-bottom: 0.5rem;
    }

    .cv-content :global(h4) {
        font-size: 1.2rem;
        color: var(--primary-color);
        margin-top: 1.5rem;
        margin-bottom: 0.5rem;
        font-weight: 600;
    }

    .cv-content :global(p) {
        margin-bottom: 1rem;
        text-align: justify;
    }

    .cv-content :global(ul) {
        margin-bottom: 1rem;
        padding-left: 1.5rem;
    }

    .cv-content :global(li) {
        margin-bottom: 0.5rem;
    }

    .cv-content :global(strong) {
        color: var(--primary-color);
        font-weight: 600;
    }

    .cv-content :global(em) {
        color: var(--secondary-color);
        font-style: italic;
    }

    /* Responsive styles */
    @media (max-width: 768px) {
        .cv-content {
            padding: 0 1rem;
        }

        .cv-content :global(h1) {
            font-size: 2rem;
        }

        .cv-content :global(h2) {
            font-size: 1rem;
        }

        .cv-content :global(h3) {
            font-size: 1.3rem;
        }
    }
</style>
